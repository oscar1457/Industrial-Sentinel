<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <FontFamily x:Key="FontPrimary">Cascadia Mono</FontFamily>

    <Color x:Key="ColorBackground">#050806</Color>
    <Color x:Key="ColorPanel">#0B120D</Color>
    <Color x:Key="ColorPanelEdge">#1B2A20</Color>
    <Color x:Key="ColorText">#D7FFE7</Color>
    <Color x:Key="ColorMuted">#6FA786</Color>
    <Color x:Key="ColorAccent">#37FF8B</Color>
    <Color x:Key="ColorAccentSoft">#2237FF8B</Color>
    <Color x:Key="ColorWarning">#FFC857</Color>
    <Color x:Key="ColorWarningSoft">#22FFC857</Color>
    <Color x:Key="ColorCritical">#FF5D73</Color>
    <Color x:Key="ColorCriticalSoft">#22FF5D73</Color>
    <Color x:Key="ColorPlotBackground">#060A07</Color>

    <LinearGradientBrush x:Key="BrushBackground" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#050806" Offset="0" />
        <GradientStop Color="#07100B" Offset="1" />
    </LinearGradientBrush>

    <SolidColorBrush x:Key="BrushPanel" Color="{StaticResource ColorPanel}" />
    <SolidColorBrush x:Key="BrushPanelEdge" Color="{StaticResource ColorPanelEdge}" />
    <SolidColorBrush x:Key="BrushText" Color="{StaticResource ColorText}" />
    <SolidColorBrush x:Key="BrushMuted" Color="{StaticResource ColorMuted}" />
    <SolidColorBrush x:Key="BrushAccent" Color="{StaticResource ColorAccent}" />
    <SolidColorBrush x:Key="BrushAccentSoft" Color="{StaticResource ColorAccentSoft}" />
    <SolidColorBrush x:Key="BrushWarning" Color="{StaticResource ColorWarning}" />
    <SolidColorBrush x:Key="BrushWarningSoft" Color="{StaticResource ColorWarningSoft}" />
    <SolidColorBrush x:Key="BrushCritical" Color="{StaticResource ColorCritical}" />
    <SolidColorBrush x:Key="BrushCriticalSoft" Color="{StaticResource ColorCriticalSoft}" />
    <SolidColorBrush x:Key="BrushPlotBackground" Color="{StaticResource ColorPlotBackground}" />

    <Style x:Key="TitleText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="26" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{StaticResource BrushAccent}" />
        <Setter Property="TextOptions.TextFormattingMode" Value="Display" />
    </Style>

    <Style x:Key="SubtitleText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="{StaticResource BrushMuted}" />
    </Style>

    <Style x:Key="CardTitle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{StaticResource BrushMuted}" />
    </Style>

    <Style x:Key="CardValue" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{StaticResource BrushText}" />
    </Style>

    <Style x:Key="LabelText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11" />
        <Setter Property="Foreground" Value="{StaticResource BrushMuted}" />
    </Style>

    <Style x:Key="LabelValue" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11" />
        <Setter Property="Foreground" Value="{StaticResource BrushText}" />
    </Style>

    <Style x:Key="StatusText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11" />
        <Setter Property="Foreground" Value="{StaticResource BrushMuted}" />
    </Style>

    <Style x:Key="Card" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource BrushPanel}" />
        <Setter Property="BorderBrush" Value="{StaticResource BrushPanelEdge}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Padding" Value="12" />
        <Setter Property="Margin" Value="0,0,0,12" />
    </Style>

    <Style x:Key="StatusBar" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource BrushPanel}" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="BorderBrush" Value="{StaticResource BrushPanelEdge}" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource BrushAccent}" />
        <Setter Property="Foreground" Value="#041007" />
        <Setter Property="BorderBrush" Value="{StaticResource BrushAccent}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="16,6" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#46FF94" />
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value="0.5" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="GhostButton" TargetType="Button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{StaticResource BrushText}" />
        <Setter Property="BorderBrush" Value="{StaticResource BrushPanelEdge}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="16,6" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#0E1A12" />
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value="0.5" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="TextBox">
        <Setter Property="Background" Value="#040A07" />
        <Setter Property="Foreground" Value="{StaticResource BrushText}" />
        <Setter Property="BorderBrush" Value="{StaticResource BrushPanelEdge}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="8,6" />
        <Setter Property="CaretBrush" Value="{StaticResource BrushAccent}" />
    </Style>

    <Style TargetType="PasswordBox">
        <Setter Property="Background" Value="#040A07" />
        <Setter Property="Foreground" Value="{StaticResource BrushText}" />
        <Setter Property="BorderBrush" Value="{StaticResource BrushPanelEdge}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="8,6" />
        <Setter Property="CaretBrush" Value="{StaticResource BrushAccent}" />
    </Style>

    <Style TargetType="ComboBox">
        <Setter Property="Background" Value="#040A07" />
        <Setter Property="Foreground" Value="{StaticResource BrushText}" />
        <Setter Property="BorderBrush" Value="{StaticResource BrushPanelEdge}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="6,4" />
    </Style>

    <Style x:Key="AlertList" TargetType="ListBox">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled" />
    </Style>

    <Style x:Key="AlertItem" TargetType="Border">
        <Setter Property="Background" Value="#0A140F" />
        <Setter Property="BorderBrush" Value="{StaticResource BrushPanelEdge}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="Margin" Value="0,0,0,8" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding Level}" Value="Critical">
                <Setter Property="BorderBrush" Value="{StaticResource BrushCritical}" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Level}" Value="Warning">
                <Setter Property="BorderBrush" Value="{StaticResource BrushWarning}" />
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="AlertTitle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{StaticResource BrushText}" />
    </Style>

    <Style x:Key="AlertMeta" TargetType="TextBlock">
        <Setter Property="FontSize" Value="10" />
        <Setter Property="Foreground" Value="{StaticResource BrushMuted}" />
    </Style>

    <Style x:Key="LogText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="10" />
        <Setter Property="Foreground" Value="{StaticResource BrushText}" />
    </Style>
</ResourceDictionary>
