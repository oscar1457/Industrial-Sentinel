<Window x:Class="IndustrialSentinel.App.Views.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Industrial Sentinel - Admin"
        Width="900"
        Height="600"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BrushBackground}"
        Foreground="{StaticResource BrushText}"
        FontFamily="{StaticResource FontPrimary}"
        Icon="/Resources/app_icon.png">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Style="{StaticResource Card}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Text="USUARIOS" Style="{StaticResource CardTitle}" />
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8,0,8">
                    <TextBox Width="220" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
                    <ComboBox Width="140" Margin="8,0,0,0" ItemsSource="{Binding RoleFilters}" SelectedItem="{Binding SelectedRoleFilter}" />
                </StackPanel>
                <ListBox Grid.Row="2" ItemsSource="{Binding UsersView}" SelectedItem="{Binding SelectedUser}" Style="{StaticResource AlertList}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource AlertItem}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Username}" Style="{StaticResource AlertTitle}" Width="170" />
                                    <TextBlock Text="{Binding Role}" Style="{StaticResource AlertMeta}" Width="80" />
                                    <TextBlock Text="{Binding IsLocked}" Style="{StaticResource AlertMeta}" Width="70" />
                                    <TextBlock Text="{Binding LockoutUntilUtc, StringFormat={}{0:yyyy-MM-dd HH:mm}}" Style="{StaticResource AlertMeta}" Width="150" />
                                    <TextBlock Text="{Binding PasswordChangedUtc, StringFormat={}{0:yyyy-MM-dd}}" Style="{StaticResource AlertMeta}" Width="120" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <StackPanel Grid.Column="1" Margin="12,0,0,0">
            <Border Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="CREAR USUARIO" Style="{StaticResource CardTitle}" />
                    <TextBlock Text="Usuario" Style="{StaticResource LabelText}" Margin="0,8,0,0" />
                    <TextBox Text="{Binding NewUsername, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock Text="Rol" Style="{StaticResource LabelText}" Margin="0,8,0,0" />
                    <ComboBox ItemsSource="{Binding Roles}" SelectedItem="{Binding NewRole}" />
                    <TextBlock Text="Contrasena" Style="{StaticResource LabelText}" Margin="0,8,0,0" />
                    <PasswordBox x:Name="NewUserPassword" />
                    <TextBlock Text="Confirmar" Style="{StaticResource LabelText}" Margin="0,8,0,0" />
                    <PasswordBox x:Name="NewUserConfirm" />
                    <Button Content="Crear" Style="{StaticResource PrimaryButton}" Margin="0,12,0,0" Click="OnCreateUser" />
                </StackPanel>
            </Border>

            <Border Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="RESET PASSWORD" Style="{StaticResource CardTitle}" />
                    <TextBlock Text="Nueva contrasena" Style="{StaticResource LabelText}" Margin="0,8,0,0" />
                    <PasswordBox x:Name="ResetPassword" />
                    <TextBlock Text="Confirmar" Style="{StaticResource LabelText}" Margin="0,8,0,0" />
                    <PasswordBox x:Name="ResetConfirm" />
                    <Button Content="Reset" Style="{StaticResource GhostButton}" Margin="0,12,0,0" Click="OnResetPassword" />
                    <Button Content="Desbloquear" Style="{StaticResource GhostButton}" Margin="0,8,0,0" Click="OnUnlock" />
                </StackPanel>
            </Border>

            <Border Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="AUDITORIA" Style="{StaticResource CardTitle}" />
                    <Button Content="Exportar CSV" Style="{StaticResource GhostButton}" Margin="0,8,0,0" Click="OnExport" />
                </StackPanel>
            </Border>

            <TextBlock Text="{Binding Status}" Foreground="{StaticResource BrushWarning}" Margin="0,8,0,0" />
        </StackPanel>
    </Grid>
</Window>
