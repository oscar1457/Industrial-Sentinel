<Window x:Class="IndustrialSentinel.App.Views.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Industrial Sentinel - Cambiar contraseña"
        Width="420"
        Height="320"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource BrushBackground}"
        Foreground="{StaticResource BrushText}"
        FontFamily="{StaticResource FontPrimary}"
        Icon="/Resources/app_icon.png">

    <Border Padding="20" Background="{StaticResource BrushPanel}" BorderBrush="{StaticResource BrushPanelEdge}" BorderThickness="1">
        <StackPanel>
            <TextBlock Text="CAMBIAR CONTRASEÑA" Style="{StaticResource CardTitle}" />
            <TextBlock Text="Nueva contraseña" Style="{StaticResource LabelText}" Margin="0,12,0,0" />
            <PasswordBox x:Name="NewPassword" />
            <TextBlock Text="Confirmar" Style="{StaticResource LabelText}" Margin="0,12,0,0" />
            <PasswordBox x:Name="ConfirmPassword" />
            <Button Content="Actualizar" Style="{StaticResource PrimaryButton}" Margin="0,16,0,0" Click="OnChange" />
            <TextBlock x:Name="StatusText" Foreground="{StaticResource BrushWarning}" Margin="0,10,0,0" />
        </StackPanel>
    </Border>
</Window>
